{
  "private": true,
  "license": "UNLICENSED",
  "type": "module",
  "engines": {
    "node": ">= 14"
  },
  "scripts": {
    "prettify": "prettier --write \"src/**/*.ts*\"",
    "lint": "yarn run lint-css && yarn run lint-js",
    "lint-js": "eslint --max-warnings 0 --config ./.eslintrc.json \"src/**/*.ts*\"",
    "lint-css": "stylelint --fix \"src/**/*.css\"",
    "css": "tcm --namedExports --pattern 'src/frontend/**/*.module.css' && eslint --fix --config ./.eslintrc.json \"src/**/*.css.d.ts\"",
    "test": "tsc --noEmit && LC_ALL=en_US.UTF-8 jest",
    "storybook": "start-storybook --port 6007",
    "dev": "yarn parcel watch",
    "build": "yarn parcel build",
    "start": "echo '{\"type\":\"commonjs\"}' > dist/package.json && node dist/backend/server.js",
    "dev-start": "echo '{\"type\":\"commonjs\"}' > dist/package.json && supervisor --watch dist/backend/ dist/backend/server.js"
  },
  "dependencies": {
    "@aws-sdk/client-ses": "^3.46.0",
    "@hapi/basic": "^6.0.0",
    "@hapi/boom": "^9.1.4",
    "@hapi/hapi": "^20.2.1",
    "@hapi/inert": "^6.0.4",
    "@kiltprotocol/chain-helpers": "^0.24.2",
    "@kiltprotocol/core": "^0.24.2",
    "@kiltprotocol/did": "^0.24.2",
    "@kiltprotocol/messaging": "^0.24.2",
    "@kiltprotocol/types": "^0.24.2",
    "@kiltprotocol/utils": "^0.24.2",
    "@kiltprotocol/vc-export": "^0.24.2",
    "@polkadot/keyring": "^8.2.2",
    "@polkadot/util": "^8.2.2",
    "@polkadot/util-crypto": "^8.2.2",
    "classnames": "^2.3.1",
    "detect-browser": "^5.3.0",
    "dotenv": "^10.0.0",
    "exiting": "^6.0.1",
    "hapi-dev-errors": "^4.0.0",
    "hapi-gate": "^2.1.0",
    "hapi-pino": "^9.1.0",
    "http-status-codes": "^2.2.0",
    "ky": "^0.28.7",
    "lodash-es": "^4.17.21",
    "node-cache": "^5.1.2",
    "pino": "^7.6.2",
    "rate-limiter-flexible": "^2.3.6",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^5.3.0",
    "twitter-api-v2": "^1.9.1",
    "zod": "^3.11.6"
  },
  "devDependencies": {
    "@babel/core": "^7.16.7",
    "@babel/preset-env": "^7.16.8",
    "@jest/globals": "^27.4.6",
    "@parcel/optimizer-data-url": "^2.1.1",
    "@parcel/transformer-inline-string": "^2.0.1",
    "@storybook/addon-actions": "6.3.12",
    "@storybook/addon-console": "^1.2.3",
    "@storybook/addon-controls": "6.3.12",
    "@storybook/addon-links": "6.3.12",
    "@storybook/addon-toolbars": "6.3.12",
    "@storybook/addon-viewport": "6.3.12",
    "@storybook/addons": "6.3.12",
    "@storybook/builder-webpack5": "6.3.12",
    "@storybook/manager-webpack5": "6.3.12",
    "@storybook/react": "6.3.12",
    "@testing-library/dom": "^8.11.1",
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/react-hooks": "^7.0.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/hapi__basic": "^5.1.2",
    "@types/hapi__boom": "^9.0.1",
    "@types/hapi__hapi": "^20.0.10",
    "@types/hapi__inert": "^5.2.3",
    "@types/jest": "^27.4.0",
    "@types/lodash-es": "^4.17.5",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "@types/react-router-dom": "^5.3.2",
    "@typescript-eslint/eslint-plugin": "^5.9.0",
    "@typescript-eslint/parser": "^5.9.0",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^25.3.4",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "jest": "^27.4.7",
    "parcel": "^2.0.1",
    "pino-pretty": "^7.3.0",
    "prettier": "^2.5.1",
    "stylelint": "^14.2.0",
    "stylelint-config-css-modules": "^2.3.0",
    "stylelint-config-standard": "^24.0.0",
    "supervisor": "^0.12.0",
    "ts-jest": "^27.1.2",
    "typed-css-modules": "^0.7.0",
    "typescript": "^4.5.4"
  },
  "targets": {
    "frontend": {
      "context": "browser",
      "engines": {
        "browsers": "last 2 Chrome versions, last 2 Firefox versions"
      },
      "source": [
        "src/frontend/index.html",
        "src/frontend/email.html",
        "src/frontend/about.html",
        "src/frontend/terms.html",
        "src/frontend/privacy.html",
        "src/frontend/verifier.html",
        "src/frontend/sign.html",
        "src/frontend/404.html"
      ],
      "distDir": "dist/frontend",
      "scopeHoist": false
    },
    "backend": {
      "isLibrary": false,
      "context": "node",
      "source": "src/backend/server.ts",
      "distDir": "dist/backend",
      "outputFormat": "esmodule",
      "scopeHoist": false
    }
  }
}
