    "@hapi/hapi": "^20.2.1",
    "@hapi/inert": "^6.0.4",
    "@kiltprotocol/chain-helpers": "0.24.0-5",
    "@kiltprotocol/core": "^0.24.0-5",
    "@kiltprotocol/did": "0.24.0-5",
    "@kiltprotocol/messaging": "^0.24.0-5",
    "@kiltprotocol/types": "0.24.0-5",
    "@kiltprotocol/utils": "0.24.0-6",
    "@kiltprotocol/vc-export": "^0.24.0-5",
    "@polkadot/keyring": "^7.3.1",
    "@polkadot/util": "^7.3.1",
    "@polkadot/util-crypto": "^7.3.1",
    "classnames": "^2.3.1",
