    "hapi-pino": "^8.5.0",
    "http-status-codes": "^2.1.4",
    "ky": "^0.28.6",
    "lodash": "^4.17.21",
    "node-cache": "^5.1.2",
    "rate-limiter-flexible": "^2.3.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^5.3.0",
    "twitter-v2": "^1.1.0",
    "zod": "^3.11.6"
  },
  "devDependencies": {
    "@babel/core": "^7.15.8",
    "@babel/preset-env": "^7.15.8",
    "@jest/globals": "^27.3.1",
    "@types/hapi-pino": "^8.0.4",
    "@types/hapi__basic": "^5.1.2",
    "@types/hapi__boom": "^9.0.1",
    "@types/hapi__hapi": "^20.0.9",
