{
  "private": true,
  "license": "UNLICENSED",
  "type": "module",
  "engines": {
    "node": ">= 14"
  },
  "scripts": {
    "prettify": "prettier --write \"src/**/*.ts*\"",
    "lint": "eslint --max-warnings 0 --config ./.eslintrc.json \"src/**/*.ts*\"",
    "css": "tcm --namedExports --pattern 'src/frontend/**/*.module.css' && eslint --fix --config ./.eslintrc.json \"src/**/*.css.d.ts\"",
    "test": "jest",
    "dev": "tsc --watch & yarn parcel watch --dist-dir dist/frontend",
    "build": "tsc && yarn parcel build",
    "start": "echo '{\"type\":\"commonjs\"}' > dist/package.json && node dist/backend/server.js",
    "dev-start": "echo '{\"type\":\"commonjs\"}' > dist/package.json && supervisor --watch dist/backend/server.js dist/backend/server.js"
  },
  "dependencies": {
    "@aws-sdk/client-ses": "^3.38.0",
