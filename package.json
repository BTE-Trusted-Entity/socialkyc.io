{
  "private": true,
  "license": "UNLICENSED",
  "type": "module",
  "engines": {
    "node": ">= 14"
  },
  "scripts": {
    "prettify": "prettier --write \"src/**/*.ts*\"",
    "lint": "yarn run lint-css && yarn run lint-js",
    "lint-js": "eslint --max-warnings 0 --config ./.eslintrc.json \"src/**/*.ts*\"",
    "lint-css": "stylelint --fix \"src/**/*.css\"",
    "css": "tcm --namedExports --pattern 'src/frontend/**/*.module.css' && eslint --fix --config ./.eslintrc.json \"src/**/*.css.d.ts\"",
    "test": "tsc --noEmit && jest",
    "dev": "yarn parcel watch",
    "build": "yarn parcel build",
    "start": "echo '{\"type\":\"commonjs\"}' > dist/package.json && node dist/backend/server.js",
    "dev-start": "echo '{\"type\":\"commonjs\"}' > dist/package.json && supervisor --watch dist/backend/ dist/backend/server.js"
  },
  "dependencies": {
    "@aws-sdk/client-ses": "^3.40.0",
    "@hapi/basic": "^6.0.0",
    "@hapi/boom": "^9.1.4",
    "@hapi/hapi": "^20.2.1",
    "@hapi/inert": "^6.0.4",
    "@kiltprotocol/chain-helpers": "^0.24.0-10",
    "@kiltprotocol/core": "^0.24.0-10",
    "@kiltprotocol/did": "^0.24.0-10",
    "@kiltprotocol/messaging": "^0.24.0-10",
    "@kiltprotocol/types": "^0.24.0-10",
    "@kiltprotocol/utils": "^0.24.0-10",
    "@kiltprotocol/vc-export": "^0.24.0-10",
    "@polkadot/keyring": "^7.7.1",
    "@polkadot/util": "^7.7.1",
    "@polkadot/util-crypto": "^7.7.1",
    "classnames": "^2.3.1",
    "detect-browser": "^5.2.1",
    "dotenv": "^10.0.0",
    "exiting": "^6.0.1",
    "hapi-dev-errors": "^4.0.0",
    "hapi-pino": "^9.0.0",
    "http-status-codes": "^2.1.4",
    "ky": "^0.28.7",
    "lodash-es": "^4.17.21",
    "node-cache": "^5.1.2",
    "pino": "^7.1.0",
    "rate-limiter-flexible": "^2.3.4",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^5.3.0",
    "twitter-api-v2": "^1.6.5",
    "zod": "^3.11.6"
  },
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@babel/preset-env": "^7.16.0",
    "@jest/globals": "^27.3.1",
    "@types/hapi-pino": "^8.0.4",
    "@types/hapi__basic": "^5.1.2",
    "@types/hapi__boom": "^9.0.1",
    "@types/hapi__hapi": "^20.0.9",
    "@types/hapi__inert": "^5.2.3",
    "@types/jest": "^27.0.2",
    "@types/lodash-es": "^4.17.5",
    "@types/pino": "^6.3.12",
    "@types/react": "^17.0.34",
    "@types/react-dom": "^17.0.11",
    "@types/react-router-dom": "^5.3.2",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-jest": "^25.2.4",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.27.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "jest": "^27.3.1",
    "parcel": "^2.0.0",
    "pino-pretty": "^7.2.0",
    "prettier": "^2.4.1",
    "stylelint": "^14.0.1",
    "stylelint-config-css-modules": "^2.3.0",
    "stylelint-config-standard": "^23.0.0",
    "supervisor": "^0.12.0",
    "ts-jest": "^27.0.7",
    "typed-css-modules": "^0.7.0",
    "typescript": "^4.4.4"
  },
  "targets": {
    "frontend": {
      "context": "browser",
      "engines": {
        "browsers": "last 2 Chrome versions, last 2 Firefox versions"
      },
      "source": [
        "src/frontend/index.html",
        "src/frontend/verifier.html",
        "src/frontend/sign.html",
        "src/frontend/404.html"
      ],
      "distDir": "dist/frontend",
      "scopeHoist": false
    },
    "backend": {
      "isLibrary": false,
      "context": "node",
      "source": "src/backend/server.ts",
      "distDir": "dist/backend",
      "outputFormat": "esmodule",
      "scopeHoist": false
    }
  },
  "resolutions": {
    "@polkadot/keyring": "7.7.1",
    "@polkadot/networks": "7.7.1",
    "@polkadot/util-crypto": "7.7.1",
    "@polkadot/util": "7.7.1",
    "@polkadot/x-global": "7.7.1",
    "@polkadot/x-randomvalues": "7.7.1",
    "@polkadot/x-textdecoder": "7.7.1",
    "@polkadot/x-textencoder": "7.7.1",
    "cbor": "8.0.2"
  }
}
